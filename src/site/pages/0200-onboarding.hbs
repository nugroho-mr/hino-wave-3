<script>
    document.addEventListener( 'DOMContentLoaded', function () {
		let splideOnboarding = new Splide( '.splide--onboarding', {
			arrows: false,
			autoplay: false,
			keyboard: false,
			perMove: 1,
		}).mount()
		splideOnboarding.on('moved',  (newIndex,oldIndex,destIndex) => {
			if( newIndex == (splideOnboarding.length - 1) ) {
				document.getElementById('link-next').classList.add('is-active')
			} else {
				document.getElementById('link-next').classList.remove('is-active')
			}
		})
	} );
</script>